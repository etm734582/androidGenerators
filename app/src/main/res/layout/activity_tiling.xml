<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seekBarTilingBrightness"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TilingActivity">

    <SeekBar
        android:id="@+id/seekBaTilingOutlineColorR"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-49dp"
        android:max="255"
        android:progress="1"
        app:layout_constraintHeight_percent="0.025"
        app:layout_constraintStart_toEndOf="@+id/textViewTilingOutlineColorR"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingOutlineColorLabel"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/textViewTilingHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/tiling_header"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/textViewTilingParams"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/label_params"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingHeader"
        app:layout_constraintWidth_percent="0.35" />

    <TextView
        android:id="@+id/textViewTilingImageSizeXLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="90dp"
        android:text="@string/edit_text_sizeX"
        android:textSize="20sp"
        app:layout_constraintHeight_percent="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/textViewTilingImageSizeYLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/edit_text_sizeY"
        android:textSize="20sp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingImageSizeXLabel"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/textViewTilingOutlineColorLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/edit_text_outlineColor"
        android:textSize="20sp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingImageSizeYLabel"
        app:layout_constraintWidth_percent="0.33" />

    <TextView
        android:id="@+id/textViewTilingOutlineColorR"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-50dp"
        android:text="@string/color_r"
        android:textSize="16sp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintStart_toEndOf="@+id/textViewTilingOutlineColorLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingOutlineColorLabel"
        app:layout_constraintWidth_percent="0.03" />

    <TextView
        android:id="@+id/textViewTilingOutlineColorG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/color_g"
        android:textSize="16sp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintStart_toEndOf="@+id/textViewTilingOutlineColorLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingOutlineColorR"
        app:layout_constraintWidth_percent="0.03" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:text="@string/color_b"
        android:textSize="16sp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintStart_toEndOf="@+id/textViewTilingOutlineColorLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingOutlineColorG"
        app:layout_constraintWidth_percent="0.03" />

    <TextView
        android:id="@+id/textViewTilingOutlineWidthLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:text="@string/edit_text_outlineWidth"
        android:textSize="20sp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingOutlineColorLabel"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/textViewTilingXPlatesQntyLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="@string/x_plates_qnty_x"
        android:textSize="20sp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingOutlineWidthLabel"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/textViewTilingYPlatesQntyLabelng"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/x_plates_qnty_y"
        android:textSize="20sp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingXPlatesQntyLabel"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/seekBarTilingImSizeX"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-25dp"
        android:max="3000"
        android:min="1"
        android:progress="1000"
        app:layout_constraintHeight_percent="0.025"
        app:layout_constraintStart_toEndOf="@+id/textViewTilingImageSizeXLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingImageSizeXLabel"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/seekBarTilingImSizeY"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-42dp"
        android:max="6000"
        android:min="1"
        android:progress="2000"
        app:layout_constraintHeight_percent="0.025"
        app:layout_constraintStart_toEndOf="@+id/textViewTilingImageSizeYLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingImageSizeYLabel"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/seekBaTilingOutlineColorG"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:max="255"
        android:progress="1"
        app:layout_constraintHeight_percent="0.025"
        app:layout_constraintStart_toEndOf="@+id/textViewTilingOutlineColorG"
        app:layout_constraintTop_toBottomOf="@+id/seekBaTilingOutlineColorR"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/seekBaTilingOutlineColorB"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:max="255"
        android:progress="1"
        app:layout_constraintHeight_percent="0.025"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/seekBaTilingOutlineColorG"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/seekBarTilingOutlineWidth"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-40dp"
        android:max="80"
        android:progress="10"
        app:layout_constraintHeight_percent="0.025"
        app:layout_constraintStart_toEndOf="@+id/textViewTilingOutlineWidthLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingOutlineWidthLabel"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/seekBarTilingQtyAxisXPlts"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-60dp"
        android:max="50"
        android:min="1"
        android:progress="8"
        app:layout_constraintHeight_percent="0.025"
        app:layout_constraintStart_toEndOf="@+id/textViewTilingXPlatesQntyLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingXPlatesQntyLabel"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/seekBarTilingQtyAxisYPlts"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-55dp"
        android:max="90"
        android:min="1"
        android:progress="10"
        app:layout_constraintHeight_percent="0.025"
        app:layout_constraintStart_toEndOf="@+id/textViewTilingYPlatesQntyLabelng"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingYPlatesQntyLabelng"
        app:layout_constraintWidth_percent="0.4" />

    <Button
        android:id="@+id/buttonTilingRun"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/run_button"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:text="@string/button_back"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.265" />

    <TextView
        android:id="@+id/textViewTilingImSizeX"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:text="1000"
        android:textSize="20sp"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintStart_toEndOf="@+id/seekBarTilingImSizeX"
        app:layout_constraintTop_toBottomOf="@+id/seekBarTilingImSizeX"
        app:layout_constraintWidth_percent="0.16" />

    <TextView
        android:id="@+id/textViewTilingImSizeY"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:text="2000"
        android:textSize="20sp"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintStart_toEndOf="@+id/seekBarTilingImSizeY"
        app:layout_constraintTop_toBottomOf="@+id/seekBarTilingImSizeY"
        app:layout_constraintWidth_percent="0.16" />

    <TextView
        android:id="@+id/textViewTilingOutlineWidth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:text="10"
        android:textSize="20sp"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintStart_toEndOf="@+id/seekBarTilingOutlineWidth"
        app:layout_constraintTop_toBottomOf="@+id/seekBarTilingOutlineWidth"
        app:layout_constraintWidth_percent="0.16" />

    <TextView
        android:id="@+id/textViewTilingQntyOfX"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:text="8"
        android:textSize="20sp"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintStart_toEndOf="@+id/seekBarTilingQtyAxisXPlts"
        app:layout_constraintTop_toBottomOf="@+id/seekBarTilingQtyAxisXPlts"
        app:layout_constraintWidth_percent="0.16" />

    <TextView
        android:id="@+id/textViewTilingQntyOfY"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:text="10"
        android:textSize="20sp"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintStart_toEndOf="@+id/seekBarTilingQtyAxisYPlts"
        app:layout_constraintTop_toBottomOf="@+id/seekBarTilingQtyAxisYPlts"
        app:layout_constraintWidth_percent="0.16" />

    <View
        android:id="@+id/viewTilingOutlineColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:background="@color/black"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintStart_toEndOf="@+id/seekBaTilingOutlineColorG"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingOutlineColorLabel"
        app:layout_constraintWidth_percent="0.05" />

    <TextView
        android:id="@+id/textViewTilingBrightnessLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/brightness_tiling"
        android:textSize="20sp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingYPlatesQntyLabelng"
        app:layout_constraintWidth_percent="0.3" />

    <SeekBar
        android:id="@+id/seekBarTilingBright"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-35dp"
        android:max="300"
        android:progress="0"
        app:layout_constraintHeight_percent="0.025"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintStart_toEndOf="@+id/textViewTilingBrightnessLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewTilingBrightnessLabel" />

    <TextView
        android:id="@+id/textViewTilingBrightness"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.16"
        app:layout_constraintStart_toEndOf="@+id/seekBarTilingBright"
        app:layout_constraintTop_toBottomOf="@+id/seekBarTilingBright" />

</androidx.constraintlayout.widget.ConstraintLayout>